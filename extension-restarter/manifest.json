{
  "manifest_version": 2,

  "name": "Demandware Restart Requester - Restarter",
  "description": "Request a sandbox instance restart",
  "version": "1.0.0",

  "permissions": [
    "https://*.unifato.net/", "notifications", "alarms", "storage", "tabs"
  ],

  "background" : {
      "scripts" : ["socket.io.js", "background.js"]
    },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}